{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Modifier l'utilisateur</h1>

        <form method="POST" enctype="multipart/form-data">
            {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.username) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.email) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.password) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.roles) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.infos.userRank) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.infos.victoire) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.infos.defaite) }}
            </div>
            <button type="submit" class="btn btn-success">Sauvegarder les modifications</button>
            {{ form_end(form) }}
        </form>

        <br>

        <a href="{{ path('app_user_index') }}" class="btn btn-primary">Retour aux utilisateurs</a>
    </div>
{% endblock %}
